<div class="row">
  <div class="col-md-8 col-md-offset-2 col-sm-12">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= title %></h3>
      </div>
      <div class="panel-body">
        <%= yield %>
      </div>
      <% if defined? footer %>
        <div class="panel-footer">
          <%= footer %>
        </div>
      <% end %>
    </div>
  </div>
</div>
